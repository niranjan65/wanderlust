<% layout("layouts/boilerplate") %>

   <div class="row">
    <div class="col-8 offset-2">
        <h3>Create a new listing</h3>
        <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data" >
            
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" placeholder="Add a catchy title" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please choose a title.
                  </div>
            </div>
            
            <div class="mb-3">
                <lable for="description" class="form-label">Description</lable>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please write a short description.
                  </div>
            </div>
            
            <div class="mb-3">
                <lable for="image" class="form-label">Upload Listing Image</lable>
                <input name="listing[image]" type="file" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
    
            <div class="row">
                <div class="mb-3 col-md-4">
                    <lable for="price" class="form-label">Price</lable>
                    <input name="listing[price]"  placeholder="1200" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please choose a price.
                      </div>
                </div>
                
                <div class="mb-3 col-md-8">
                    <lable for="country" class="form-label">Country</lable>
                    <input name="listing[country]" type="text" placeholder="India" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please choose a username.
                      </div>
                </div>
            </div>
            
            <div class="mb-3">
                <lable for="location" class="form-label">Location</lable>
                <input name="listing[location]" type="text" placeholder="Kolkata, West Bengal" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please choose a username.
                  </div>
            </div>
            <br/><br/>
            <button class="btn btn-dark add-btn">add</button>
            <br><br>
        </form>
    </div>
   </div>
